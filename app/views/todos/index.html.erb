<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
      <%= link_to "Edit this todo", edit_todo_path(todo) %>
      <%= button_to "Destroy this todo", todo, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path %>
